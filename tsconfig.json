{
    "extends": "@becklyn/tsconfig/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.scss", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
